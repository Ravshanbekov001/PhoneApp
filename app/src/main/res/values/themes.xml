<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhoneApp" parent="Theme.MaterialComponents.Light">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="cardBackground">
        <item name="cardBackgroundColor">@color/yellow</item>
    </style>

    <style name="MaintextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <color name="textColor">#000000</color>

    <style name="textColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edtBackground">
        <item name="android:background">@color/edit_text_background</item>
    </style>

    <style name="edtCardBackground">
        <item name="cardBackgroundColor">@color/edit_text_background</item>
    </style>

    <style name="AddCardBackground">
        <item name="cardBackgroundColor">@color/yellow</item>
    </style>

</resources>